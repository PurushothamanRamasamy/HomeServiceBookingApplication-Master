@model HomeService.Models.ViewModel.ProviderModel

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterProvider">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization" class="control-label"></label>
                @Html.DropDownListFor(model => model.Specialization, new SelectList(ViewBag.specialization, "Value", "Text"), "--- Select ---", htmlAttributes: new { @class = "form-control", @id = "txtrole" })
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specification" class="control-label"></label>
                <input asp-for="Specification" class="form-control" />
                <span asp-validation-for="Specification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicePincodeOne" class="control-label"></label>
                <input asp-for="ServicePincodeOne" class="form-control"  />
                <span asp-validation-for="ServicePincodeOne" class="text-danger"></span>
            </div>
            <script>
                var isOpen = false;
            </script>
            <div id="addpincode">
                <button type="button" class="btn btn-sm btn-primary" style="cursor:pointer" onclick="fun()">Add</button>
            </div>
            
            <script>
                function fun() {
                    document.getElementById('addpincode').style.display = "none";
                    document.getElementById('showdiv').style.display = "block";
                }
            </script>
            <div style="display:none" id="showdiv">
                <div class="form-group">
                    <label asp-for="ServicePincodeTwo" class="control-label"></label>
                    <input asp-for="ServicePincodeTwo" class="form-control" id="txtServiceCity" />
                    <span asp-validation-for="ServicePincodeTwo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServicePincodeThree" class="control-label"></label>
                    <input asp-for="ServicePincodeThree" class="form-control" id="txtServiceCity" />
                    <span asp-validation-for="ServicePincodeThree" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Aadhaarno" class="control-label"></label>
                <input asp-for="Aadhaarno" class="form-control" />
                <span asp-validation-for="Aadhaarno" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Experience" class="control-label"></label>
                <input asp-for="Experience" class="form-control" />
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costperhour" class="control-label"></label>
                <input asp-for="Costperhour" class="form-control" />
                <span asp-validation-for="Costperhour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="SignUp" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

